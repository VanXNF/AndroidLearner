<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_1"
    android:background="@color/white"
    android:paddingStart="@dimen/dp_15"
    android:paddingEnd="@dimen/dp_15"
    android:paddingTop="@dimen/dp_15"
    android:paddingBottom="@dimen/dp_25">

    <RelativeLayout
        android:id="@+id/author_container_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/author_avatar_image"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_centerVertical="true"
            android:contentDescription="@string/avatar"
            android:src="@drawable/ic_author_red_24dp" />

        <TextView
            android:id="@+id/author_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_toEndOf="@id/author_avatar_image"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/red"
            android:textSize="@dimen/sp_13"
            tools:ignore="RelativeOverlap" />

        <ImageView
            android:id="@+id/release_time_image"
            android:layout_width="@dimen/dp_17"
            android:layout_height="@dimen/dp_17"
            android:tint="@color/gray"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/release_time_text"
            android:contentDescription="@string/release_time"
            android:src="@drawable/ic_access_time_gray_24dp" />

        <TextView
            android:id="@+id/release_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:maxLines="1"
            android:textSize="@dimen/sp_12"
            android:paddingStart="@dimen/dp_5"
            android:paddingEnd="@dimen/dp_5"
            android:singleLine="true" />


    </RelativeLayout>

    <TextView
        android:id="@+id/release_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/author_container_relative"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/dp_0"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginEnd="@dimen/dp_15"
        android:paddingStart="@dimen/dp_0"
        android:paddingEnd="@dimen/dp_15"
        android:textColor="@color/gray"
        android:textSize="@dimen/sp_13" />


</RelativeLayout>
