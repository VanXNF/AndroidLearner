<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_5"
    android:background="@color/white"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/dp_5"
    app:cardElevation="@dimen/dp_0_5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingStart="@dimen/dp_15"
        android:paddingTop="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_15">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40">

            <ImageView
                android:id="@+id/article_avatar_image"
                android:layout_width="@dimen/dp_35"
                android:layout_height="@dimen/dp_35"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_15"
                android:contentDescription="@string/author"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher_round" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/article_avatar_image"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/article_author_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_2"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_10"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/article_time_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_2"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/sp_9" />
            </LinearLayout>

            <TextView
                android:id="@+id/article_category_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/dp_5"
                android:maxLines="1"
                android:paddingStart="@dimen/dp_0"
                android:paddingEnd="@dimen/dp_2"
                android:singleLine="true"
                android:textColor="@color/gray"
                android:textSize="@dimen/sp_8" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5">

            <TextView
                android:id="@+id/article_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_55"
                android:maxLines="1"
                android:paddingStart="@dimen/dp_0"
                android:paddingEnd="@dimen/dp_15"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_10" />

            <TextView
                android:id="@+id/article_desc_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/article_title_text"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginEnd="@dimen/dp_55"
                android:paddingStart="@dimen/dp_0"
                android:paddingEnd="@dimen/dp_15"
                android:textColor="@color/gray"
                android:textSize="@dimen/sp_10"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/article_project_image"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:layout_alignParentEnd="true"
                android:contentDescription="@string/preview"
                android:scaleType="centerCrop"
                android:visibility="gone" />
        </RelativeLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
